{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        // Ask dotnet build to generate full paths for file names.
        "/property:GenerateFullPaths=true",
        "--no-restore",
        // Do not generate summary otherwise it leads to duplicate errors in Problems panel
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-tests",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "--no-restore",
        "/consoleloggerparameters:NoSummary",
        "tests/Tests/Tests.fsproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-benchmark",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "--no-restore",
        "/consoleloggerparameters:NoSummary",
        "src/Benchmark/Benchmark.fsproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-apiserver",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "--no-restore",
        "/consoleloggerparameters:NoSummary",
        "src/ApiServer/ApiServer.fsproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-bwdserver",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "--no-restore",
        "/consoleloggerparameters:NoSummary",
        "src/BwdServer/BwdServer.fsproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-fuzztests",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "--no-restore",
        "/consoleloggerparameters:NoSummary",
        "tests/FuzzTests/FuzzTests.fsproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/fsharp-backend"
      },
      "group": "build",
      "problemMatcher": "$msCompile"
    }
  ]
}

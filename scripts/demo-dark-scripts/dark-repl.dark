let loop () : Int64 =
  Builtin.printLine "Enter single-line standalone expression (or 'exit' to exit):"

  let input = Builtin.Stdin.readLine ()

  match input with
  | "exit" ->
    Builtin.printLine "Goodbye!"
    0
  | _sourceCode ->
    Builtin.printLine $"This is the part where I'd evaluate your expression..."
    loop ()

(Builtin.printLine "Welcome to the Darklang REPL."
 loop ())
#!/usr/bin/env bash
. ./scripts/devcontainer/_assert-in-container "$0" "$@"

set -euo pipefail

usage() {
    echo "usage: compile-project [name of project] [--test]
Compiles a dark project. Options are:
client, backend, fsharp-backend, stroller, queue-scheduler, deploy, all.
--test: runs tests
"
}

declare -A files
files["backend"]="backend/bin/server.ml backend/test/test.ml esy.json"
files["fsharp-backend"]="fsharp-backend/global.json"
files["client"]="package.json client/src/Types.ml client/styles/app.scss client/test/ast_test.ml"
files["stroller"]="containers/stroller/src/main.rs"
files["queue-scheduler"]="containers/queue-scheduler/src/main.rs"
files["deploy"]="scripts/deployment/requirements.txt"
for v in "${files[@]}"; do
  files["all"]+=" $v"
done

test=""
optimize=""
testfiles=""

for cmd in "$@"; do
  case $cmd in
    backend | client | stroller | queue-scheduler | deploy | all | fsharp-backend)
      testfiles="${testfiles} ${files[$cmd]}"
      ;;
    --test )
      test="--test"
      ;;
    --optimize )
      optimize="--optimize"
      ;;
    -h | --help )
      usage
      exit
      ;;
    * )
      usage
      exit 1
      ;;
  esac
done

./scripts/build/compile $testfiles $test $optimize

#!/usr/bin/env bash
. ./scripts/devcontainer/_assert-in-container "$0" "$@"

set -euo pipefail

usage() {
    echo "usage: compile-project [name of project] [--test] [--optimize]
Compiles a dark project. Options are:
parser, backend, all.
  --test: runs tests
  --optimize: adds --optimize, if appropriate
"
}

declare -A files
files["parser"]="parser/tree-sitter-darklang/grammar.js"
files["backend"]="backend/global.json"
for v in "${files[@]}"; do
  files["all"]+=" $v"
done

test=""
optimize=""
testfiles=""

for cmd in "$@"; do
  case $cmd in
    parser | backend | all)
      testfiles="${testfiles} ${files[$cmd]}"
      ;;
    --test )
      test="--test"
      ;;
    --optimize )
      optimize="--optimize"
      ;;
    -h | --help )
      usage
      exit
      ;;
    * )
      usage
      exit 1
      ;;
  esac
done

./scripts/build/compile $testfiles $test $optimize

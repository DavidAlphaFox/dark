#!/usr/bin/env bash

set -euo pipefail

# generate an etags doc for the following files, put it in
# static/etags.json

body=$(
  find backend/static -type f -and -not  -name "*.gz" -printf "%p\n" \
  | xargs sha256sum \
  | sed 's!\([a-z0-9]\+\)  backend/static/\(.*\)!, "\2": "\1"!g')

cat > backend/static/etags.json <<EOF
{ "__date": "$(date -Iseconds)"
${body}
}
EOF

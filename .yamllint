extends: default

rules:
  line-length: disable
  document-start: disable
  indentation:
    spaces: 2
    # The k8s examples use it, but this is ridiculous (and half our yaml does
    # it the other way)
    indent-sequences: true
  key-duplicates: enable
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  comments:
    require-starting-space: true
    min-spaces-from-content: 1
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
